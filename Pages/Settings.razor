<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h5">
			<MudIcon Icon="@Icons.Material.Filled.Settings" class="mr-3 mb-n1" />
			Settings
		</MudText>
	</TitleContent>
	<DialogContent>
		<MudGrid>
			<MudItem sm="12">
				<MudField Label="Difficulty" Variant="Variant.Outlined">
					<MudRadioGroup @bind-SelectedOption="@WordListChoice">
						<MudRadio Option="@("wordlist-easier")">Easier Wordlist</MudRadio>
						<MudRadio Option="@("allwords")" class="pe-4">Complete Wordlist</MudRadio>
					</MudRadioGroup>
				</MudField>
			</MudItem>
		</MudGrid>
	</DialogContent>
	<DialogActions>
		<MudButton @onclick="Done">Done</MudButton>
	</DialogActions>
</MudDialog>

@code
{
#pragma warning disable CS8618
	[Inject] private Blazored.LocalStorage.ISyncLocalStorageService LocalStorage { get; set; }
#pragma warning restore CS8618
	public string WordListChoice { get; set; } = null!;
	public int Guesses { get; set; }

	[CascadingParameter] MudDialogInstance MudDialog { get; set; }

	void Done()
	{
		LocalStorage.SetItemAsString("wordlist", WordListChoice);
		LocalStorage.SetItem("guesses", Guesses);
		MudDialog.Close(DialogResult.Ok(true));
	}

	protected override void OnInitialized()
	{
		if (LocalStorage.ContainKey("wordlist"))
		{
			WordListChoice = LocalStorage.GetItemAsString("wordlist");
		}
		else
		{
			WordListChoice = "wordlist-easier";
		}
	}
}
